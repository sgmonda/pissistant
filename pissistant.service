[Unit]
Description=Pissistant
After=local-fs.target network.target

[Service]
WorkingDirectory=/home/pi/Projects/pissistant/
ExecStart=/bin/bash start.sh
Type=forking
User=pi
Restart=always
RestartSec=5s
StartLimitInterval=10
StartLimitBurst=5
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target
